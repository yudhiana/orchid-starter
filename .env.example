# Application Configuration
APP_ENV=development
APP_HOST=0.0.0.0
APP_NAME=orchid-starter
APP_PORT=8080
APP_VERSION=1.0.0

# Debug Configuration
LOG_LEVEL=DEBUG
DATABASE_DEBUG=true
ES_DEBUG=true
PROMETHEUS_ACTIVE=true

# MySQL Configuration
PASSWORD_DB=orchid_password
USERNAME_DB=orchid_user
DATABASE_NAME=orchid_db
DATABASE_HOST=mysql
DATABASE_PORT=3306
MAX_IDLE_CONNS_MYSQL=5
MAX_OPEN_CONNS_MYSQL=10
CONN_MAX_LIFETIME_MYSQL=60
MAX_IDLE_CONNECTION_MYSQL=5

# Elasticsearch Configuration
ES_ADDRESSES=http://elasticsearch:9200
ES_IDLE_TIMEOUT=60
ES_MAX_IDLE_CONNS=100
ES_MAX_IDLE_CONN_PER_HOST=10
ES_MAX_CONNS_PER_HOST=100

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# Logger Configuration
LOGGER_STDOUT=true
LOGGER_FILE_MAX_AGE=7
LOGGER_FILE_LOCATION=./logs/app.log
LOGGER_TDR_FILE_LOCATION=./logs/tdr.log

# Git Authentication (for private dependencies)
GIT_USERNAME=your_github_username
GIT_PASSWORD=your_github_token

# Sentry (Optional)
SENTRY_DSN=